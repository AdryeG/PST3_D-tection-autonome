<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageButton
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_retour"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textColor="@android:color/secondary_text_light"
        android:layout_toEndOf="@+id/button"
        android:paddingTop="2dp"
        android:id="@+id/ID_retourText"
        android:text="Retour"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/ID_retourText"
        android:layout_centerHorizontal="true"
        android:textSize="30dp"
        android:layout_marginTop="200dp"
        android:text="Titre"
        android:id="@+id/id_titre"/>

    <Button
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/id_titre"
        android:background="@drawable/button_rounded"
        android:layout_marginTop="90dp"
        android:layout_centerHorizontal="true"
        android:text="Historique"
        android:id="@+id/btn_hist"/>
    <Button
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btn_hist"
        android:background="@drawable/button_rounded"
        android:layout_marginTop="60dp"
        android:layout_centerHorizontal="true"
        android:text="Notification         ON"
        android:id="@+id/btn_notifON"
        android:visibility="gone"
        />
    <Button
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btn_hist"
        android:background="@drawable/button_rounded"
        android:layout_marginTop="60dp"
        android:layout_centerHorizontal="true"
        android:text="Notification        OFF"
        android:id="@+id/btn_notifOFF"
        android:visibility="gone"
        />

    <Button
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btn_hist"
        android:background="@drawable/button_rounded_red"
        android:textColor="@android:color/background_light"
        android:layout_marginTop="120dp"
        android:layout_centerHorizontal="true"
        android:text="supprimer"
        android:id="@+id/delete"/>

</RelativeLayout>